{
  "manifest_version": 3,
  "name": "LABS Alert",
  "version": "1.0.0",
  "description": "Get alerts for SAGE LABS activities.",
  "permissions": [
    "activeTab",
    "notifications",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["notification.mp3"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    }
  ]
}
